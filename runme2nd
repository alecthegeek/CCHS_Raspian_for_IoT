if [[ $(ask "Do you wish to install the Wiring Pi library? (http://wiringpi.com/)[y/N] ") =~ ^[Yy]$ ]]
then

  # Install the WiringPi

  WP=/usr/src/wiringPi

  sudo mkdir -p $WP | tee -a $LOG_FILE 2>&1
  sudo chown $USER:$(id -g -n $USER) $WP | tee -a $LOG_FILE 2>&1

  pushd $WP | tee -a $LOG_FILE 2>&1

  git clone git://git.drogon.net/wiringPi . | tee -a $LOG_FILE 2>&1
  ./build | tee -a $LOG_FILE 2>&1

  cat <<EOF |sudo tee /usr/local/bin/updateWiringPi
#!/usr/bin/env sh
# Keep wiringPi updated

cd $WP
git pull origin &&
./build &&
echo WiringPi updated ||
echo WiringPi update failed
EOF

  sudo chmod + /usr/local/bin/updateWiringPi | tee -a $LOG_FILE 2>&1

  echo "To update the wiringPi library run the script /usr/local/bin/updateWiringPi as needed" | tee -a $LOG_FILE 2>&1
  echo

  popd | tee -a $LOG_FILE 2>&1
else
  echo "Operation not performed." | tee -a $LOG_FILE 2>&1
fi

